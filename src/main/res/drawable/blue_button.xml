<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient 
                android:startColor="@color/dk_gray"
                android:endColor="@color/gray"
                android:angle="45"
            />
            <stroke
                android:width="1dp"
                android:color="@color/gray"
            />
            <corners
                android:radius="5dp"
            />    
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient 
                android:startColor="@color/dk_blue"
                android:endColor="@color/lt_blue"
                android:angle="45"
            />
            <stroke
                android:width="1dp"
                android:color="@color/gray"
            />
            <corners
                android:radius="5dp"
            />    
        </shape>
    </item>

</selector>
