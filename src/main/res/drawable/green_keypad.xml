<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient 
                android:startColor="#41680f"
                android:endColor="#213d03"
                android:angle="180"
            />
            <stroke
                android:width="2dp"
                android:color="@color/black"
            />
            <corners
                android:radius="35dp"
            />   
        </shape>
    </item>
    
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#4e8d0b"
                android:endColor="#8cd514"
           		android:angle="90"
           		/>
            <stroke
                android:width="2dp"
                android:color="@color/black"
                />
            <corners
                android:radius="35dp"
            /> 
        </shape>
    </item>

</selector>
